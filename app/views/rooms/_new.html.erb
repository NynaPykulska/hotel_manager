<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            <h4 class="modal-title">Dodaj pokój</h4>
        </div>

            <%= bootstrap_form_for :room, remote: true, html: { style: "display:inline;", id: "newRoomForm" } do |f| %>
        <div class="modal-body">

                <!-- Room/other switch -->
                <div class="row">
                    <div class="col-xs-12">

                        <label class="control-label">Pokój / inne</label>                    
                        <div id="room_other_check_box_wrapper">
                            <%= f.form_group :is_other do %>
                                <div class="checkbox-slider--c">
                                    <label> 
                                        <%= f.check_box :is_other, id: "room_other_check_box" do %>
                                            <span id="room_other_desc">Pokój</span>
                                        <% end %>
                                    </label>
                                </div>
                            <% end %>
                        </div>
                        <script type="text/javascript">
                            $('#room_other_check_box_wrapper').click(function() {
                                var check_box = document.getElementById('room_other_check_box');
                                var check_span = $('#room_other_check_box_wrapper span');
                                check_box.click();
                                if( check_box.checked ){
                                    check_span.html("Inne");
                                } else {
                                    check_span.html("Pokój");
                                }
                            })
                        </script>
                    </div>
                </div>

                <!-- Room ID -->
                <div class="row">
                    <div class="col-xs-12">
                        <%= f.text_field :room_id, label: "Numer pokoju" %>
                    </div>
                </div>

                <!-- Description -->
                <div class="row">
                    <div class="col-xs-12">
                        <%= f.text_field :description, label: "Opis pokoju" %>
                    </div>
                </div>

                <!-- List -->
                <div class="row">
                    <div class="col-xs-12">
                        <%= f.collection_select :selected_issues, IssueType.all, :id, :issue_description, {label: "Dostępne usterki"}, {multiple: true, id: "selected_issues"} %>
                    </div>
                    <script type="text/javascript">
                        $('#selected_issues').multiSelect();
                    </script>

                    <!-- <div class="col-xs-2">
                        <a class="btn g-ripple-effect" id="addIssue"> -> </a>
                        <a class="btn g-ripple-effect" id="removeIssue"> <- </a>
                    </div>
                    <div class="col-xs-5">
                        <%= f.collection_select :selected_issues, IssueType.none, :id, :issue_description, {label: "Wybrane usterki"}, {multiple: true, id: "selected_issues"} %>
                    </div> -->
                </div>

                

        </div>
         <div class="modal-footer">
                    <div class="text-right">
                        <a href="" data-dismiss="modal" class="btn btn-default">Anuluj</a>
                        <a href="" class="btn btn-primary" id="submitNewRoom">Utwórz</a>
                    </div>
                </div>
            <% end %>  

    </div>
</div>